<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".landing.views.fragments.MainFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_weather"
            android:layout_centerHorizontal="true"
            android:id="@+id/ivWeather"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_cities_weather"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:id="@+id/bCitiesWeather"
            android:background="@drawable/bg_grey"
            android:layout_below="@+id/ivWeather"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_current_weather"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_grey"
            android:id="@+id/bCurrentWeather"
            android:layout_below="@+id/bCitiesWeather"
            />

    </RelativeLayout>

</RelativeLayout>